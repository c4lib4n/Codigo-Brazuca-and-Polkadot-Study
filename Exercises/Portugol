Exercise 2 

programa {
  funcao inicio() {
    
   real numero1, numero2, resultado

  escreva("Digite o primeiro numero: ")
  leia(numero1)

  escreva("Digite o segundo numero: ")
  leia(numero2)

   resultado = numero1 + numero2

   escreva("A soma dos numeros e: ", resultado)
  }
}


